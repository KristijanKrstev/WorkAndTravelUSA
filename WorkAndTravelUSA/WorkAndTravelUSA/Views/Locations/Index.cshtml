@model IEnumerable<WorkAndTravelUSA.Models.Location>

@{
    ViewBag.Title = "Index";
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img src="~/Images/cover.jpg" class="d-block w-100" style="height:30em" alt="cover">
        </div>
        <div class="carousel-item">
            <img src="~/Images/WORK-TRAVEL-USA-2020-Slideshow-1000x460.png" class="d-block w-100" style="height:30em" alt="second">
        </div>
        <div class="carousel-item">
            <img src="~/Images/Work-and-Travel-USA-2018-Lifeguards-in-New-Jersey-678x381.jpg" class="d-block w-100" style="height:30em" alt="three">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="container py-4">
    <h2 class="text-center">Креирајте локација и споделете го вашето искуство</h2>
    <div class="row py-3 ">
        <button class="btn btn-light m-auto" style="text-decoration: none;">
            @Html.ActionLink("Креирај локација", "Create")
        </button>
    </div>
    <div class="row text-center">
        @foreach (var item in Model)
        {

            var db = new WorkAndTravelUSA.Models.UsaContext();
            var NameOfClient = db.clientModels.Find(item.IdClient).Name;
        <div class="col-md-4 py-2">
            <div class="card m-auto" style="width: 18rem;">
                <img src="@item.imgUrl" class="card-img-top" style="height:12em" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.State</p>
                    <button class="btn btn-light">@Html.ActionLink("Детали", "Details", new { id = item.Id })</button>
                </div>
            </div>
        </div>
        }
    </div>
</div>