<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/8d9c259b70.js" crossorigin="anonymous"></script>
    <script src="jquery-3.4.1.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top label-danger">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Locations/Index"><img alt="American flag" src="~/Images/amerika2.png" height="40" width="80" /> </a>

            </div>
            <div class="navbar-collapse collapse ">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Почетна", "Index", "Locations")</li>
                    <li>@Html.ActionLink("НПП", "About", "Layout")</li>
                    <li>@Html.ActionLink("Контакт", "Contact", "Layout")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-expanded="false">Места<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu">



                            @{
                                var db = new WorkAndTravelUSA.Models.UsaContext();
                            }

                            @foreach (WorkAndTravelUSA.Models.Location location in db.locationModels)
                            {
                                <li role="presentation">
                                    <a href="#" role="tab" data-toggle="tab">
                                        @{
                                            var path = "/Locations/Details/" + @location.Id;
                                        }
                                        <a href=@path>@location.Name</a>
                                    </a>
                                </li>
                                <li class="divider"></li>
                            }



                        </ul>
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Project made for "Интернет технологии" course.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
